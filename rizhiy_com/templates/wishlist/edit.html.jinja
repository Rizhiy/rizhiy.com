{% extends "base.html.jinja" %}
{% block title %}Edit Wish{% endblock %}
{% block content %}
    <form method="post">
        <label for="title">Title</label>
        <input name="title"
               id="title"
               placeholder="A wish"
               value="{{ wish['title'] }}"
               required />
        <label for="desc">Description</label>
        <textarea name="desc" id="desc">{{ wish['desc'] }}</textarea>
        <label for="rough_price">Price</label>
        <input name="rough_price"
               id="rough_price"
               placeholder="0.00"
               value="{{ wish['rough_price'] }}" />
        <input name="currency"
               id="currency"
               placeholder="USD"
               value="{{ wish['currency'] }}" />
        <label for="picture_url"></label>
        <input name="picture_url" id="picture_url" value="{{ wish['picture_url'] }}" />
        <div id="links-section">
            <label>Links</label>
            <div id="existing-links">
                {% for link in links %}
                <div class="link-entry" data-link-id="{{ link.id }}">
                    <input type="text" name="link_urls[]" value="{{ link.url }}" placeholder="URL" required />
                    <input type="text" name="link_descs[]" value="{{ link.desc }}" placeholder="Description" />
                    <button type="button" class="remove-link">Remove</button>
                    <input type="hidden" name="link_ids[]" value="{{ link.id }}" />
                </div>
                {% endfor %}
            </div>
            <button type="button" id="add-link">Add Link</button>
        </div>
        <input type="submit" value="Save" />
    </form>
{% endblock %}
